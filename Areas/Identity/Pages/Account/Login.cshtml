

@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    /* Background + card polish */
    body {
        background: radial-gradient(1200px 600px at 80% -10%, rgba(13,110,253,.08), transparent 60%), radial-gradient(900px 500px at 10% 110%, rgba(25,135,84,.06), transparent 60%), #f8f9fa;
    }

    .auth-card {
        border: 0;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,.08);
        overflow: hidden;
    }

    .auth-header {
        background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
        color: #fff;
    }

    .brand-badge {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: rgba(255,255,255,.15);
        display: grid;
        place-items: center;
        font-weight: 700;
        letter-spacing: .5px;
    }

    .form-floating > label {
        right: auto;
        left: auto;
    }

    .text-muted-80 {
        color: rgba(0,0,0,.6) !important;
    }
    /* Fine-tune external buttons layout */
    .btn-provider {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: .5rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card auth-card">
                <!-- Header -->
                <div class="auth-header p-4 p-md-5 d-flex align-items-center gap-3">
                    <div class="brand-badge">RG</div>
                    <div>
                        <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                        <p class="mb-0 opacity-75">Welcome back — sign in to continue</p>
                    </div>
                </div>

                <!-- Body -->
                <div class="card-body p-4 p-md-5">
                    <div class="row g-5">
                        <!-- Local account form -->
                        <div class="col-md-6">
                            <section>
                                <form id="account" method="post" novalidate>
                                    <h2 class="h5 text-muted-80 mb-3">Use your account</h2>
                                    <hr />
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                                        <label asp-for="Input.UserName" class="form-label">Username</label>
                                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                    </div>

                                    <div class="position-relative mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" id="pwd" />
                                            <label asp-for="Input.Password" class="form-label">Password</label>
                                            <button type="button"
                                                    class="btn btn-outline-secondary position-absolute top-50 translate-middle-y"
                                                    style="right:.5rem" aria-label="Show/Hide password"
                                                    onclick="togglePwd('pwd', this)">
                                                Show
                                            </button>
                                        </div>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            <label asp-for="Input.RememberMe" class="form-check-label">
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                        <a id="forgot-password" asp-page="./ForgotPassword" class="small">Forgot password?</a>
                                    </div>

                                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100">Log in</button>

                                    <div class="mt-4 small text-muted">
                                        New here?
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
                                        &nbsp;|&nbsp;
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                    </div>
                                </form>
                            </section>
                        </div>

                        <!-- External providers -->
                        <div class="col-md-6">
                            <section>
                                <h3 class="h5 text-muted-80">Or sign in with</h3>
                                <hr />
                                @{
                                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                    {
                                        <div class="alert alert-info" role="alert">
                                            No external authentication services are configured. See
                                            <a class="alert-link" href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank" rel="noopener">
                                                this guide to enable external login
                                            </a>.
                                        </div>
                                    }
                                    else
                                    {
                                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2">
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit"
                                                        class="btn btn-outline-primary btn-provider"
                                                        name="provider"
                                                        value="@provider.Name"
                                                        title="Log in with @provider.DisplayName">
                                                    @* Optional: add icons by provider name if you have them *@
                                                    @provider.DisplayName
                                                </button>
                                            }
                                        </form>
                                    }
                                }
                                <div class="mt-4 small text-muted">
                                    Having trouble? Check your email verification or reset your password.
                                </div>
                            </section>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer text-center py-3">
                    <small class="text-muted">© @DateTime.UtcNow.Year — Login Page</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePwd(id, btn) {
            const input = document.getElementById(id);
            const isPwd = input.getAttribute('type') === 'password';
            input.setAttribute('type', isPwd ? 'text' : 'password');
            btn.textContent = isPwd ? 'Hide' : 'Show';
        }
    </script>
}
